<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pt.techzebra.promgamemobile"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="15" />
    <uses-permission android:name="android.permission.INTERNET" /> 

    <application
        android:name="pt.techzebra.promgamemobile.PromGame"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name="pt.techzebra.promgamemobile.ui.DashboardActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name="pt.techzebra.promgamemobile.ui.AuthenticationActivity"
            android:noHistory="true"
            android:excludeFromRecents="true" />
        
        <activity android:name="pt.techzebra.promgamemobile.ui.ProfileActivity" />
    </application>

</manifest>