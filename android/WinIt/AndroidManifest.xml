<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pt.techzebra.winit"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />

    <application
        android:name="pt.techzebra.winit.WinIt"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name="pt.techzebra.winit.ui.DashboardActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="pt.techzebra.winit.ui.AuthenticationActivity"
            android:excludeFromRecents="true"
            android:noHistory="true" />
        <activity android:name="pt.techzebra.winit.ui.SignupActivity" />
        
        <activity android:name="pt.techzebra.winit.ui.PromotionsActivity" />
        <activity android:name="pt.techzebra.winit.ui.PromotionActivity" android:uiOptions="splitActionBarWhenNarrow"  />
        <activity android:name="pt.techzebra.winit.ui.MyPromotionsActivity" />
        <activity android:name="pt.techzebra.winit.ui.BadgesActivity" />
        <activity android:name="pt.techzebra.winit.ui.ProfileActivity" />
        <activity android:name="pt.techzebra.winit.ui.TagsActivity" />
        <activity android:name="pt.techzebra.winit.ui.EditProfileActivity" />
        <activity android:name="pt.techzebra.winit.games.quiz.QuizActivity" android:theme="@style/Theme.VPI"/>
        <activity android:name="pt.techzebra.winit.ui.TradingActivity" />
        <activity android:name="pt.techzebra.winit.ui.TradeablePromotionsFragmentActivity" />
    </application>

</manifest>