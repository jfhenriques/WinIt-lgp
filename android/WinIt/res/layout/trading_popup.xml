<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_gray"
    android:padding="@dimen/gap" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginBottom="@dimen/gap2" >

        <TextView
            android:id="@+id/trader_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Francisco" 
            android:layout_marginRight="3dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_recive_trade" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/gap2"
        android:gravity="center_horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/gap" >

            <QuickContactBadge
                android:id="@+id/quickContactBadge1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/you"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/gap" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                
                android:src="@drawable/abs__ab_bottom_solid_dark_holo" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:minWidth="150dp"
                android:minHeight="80dp"
                android:src="@drawable/abs__ab_bottom_solid_dark_holo" />
 			
 			<LinearLayout
            	android:layout_width="match_parent"
            	android:layout_height="@dimen/gap"
            	android:orientation="horizontal" >
        	</LinearLayout>
        
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:minWidth="150dp"
                android:minHeight="80dp"
                android:src="@drawable/abs__ab_bottom_solid_dark_holo" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/gap" >

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:src="@drawable/abs__ab_bottom_solid_dark_holo" />

            <QuickContactBadge
                android:id="@+id/quickContactBadge2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom" />

            <TextView
                android:id="@+id/trader_name_image_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Francisco"
                android:layout_marginTop="@dimen/gap" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/refuse_button"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:background="@color/red"
            android:text="@string/refuse"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="@dimen/gap"
            android:layout_height="match_parent"
            android:orientation="vertical" >
        </LinearLayout>

        <Button
            android:id="@+id/accept_button"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:background="@color/green"
            android:text="@string/accept"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>