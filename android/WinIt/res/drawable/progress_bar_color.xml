<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="25dip" />
            <gradient android:startColor="@color/peter_river" android:endColor="@color/peter_river" android:angle="90" />
            <stroke android:width="1dp" android:color="@color/peter_river" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="25dip" />
                <gradient android:startColor="@color/clouds" android:endColor="@color/clouds"
                    android:angle="90" />
            </shape>
        </clip>
    </item>
</layer-list>
